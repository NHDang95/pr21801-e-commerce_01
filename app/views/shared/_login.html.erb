<div class="modal fade" id="loginModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" style="padding:35px 50px;">
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
        <h4>
          <span class="fa fa-lock"></span> <%= t ".login" %>
        </h4>
      </div>
      <div class="modal-body" style="padding:40px 50px;">
        <%= form_for(:user, url: session_path(:user)) do |f| %>
         <form role="form">
            <div class="form-group">
              <span class="fa fa-user"></span>
              <%= f.label :name, t("devise.sessions.new.name") %>:<br/>
              <%= f.text_field :name, autofocus: true, autocomplete: "name",
                class: "form-control" %>
            </div>
            <div class="form-group">
              <span class="fa fa-eye"></span>
              <%= f.label :password, t("devise.sessions.new.password") %>:<br/>
              <%= f.password_field :password, autocomplete: "current-password",
                class: "form-control" %>
            </div>
            <div class="checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, t("devise.sessions.new.remember") %>
            </div>
            <%= f.submit t(".login"),
              class: "btn btn-success btn-block" %>
          </form>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-danger btn-default pull-left"
          data-dismiss="modal">
          <span class="fa fa-times"></span> <%= t ".cancel" %>
        </button>
        <span>
          <%= t ".not_a_member" %>
          <%= link_to t(".sign_up"), new_registration_path(:user),
            class: "modal-link" %>
        </span>
      </div>
    </div>
  </div>
</div>
