<div class="container_fullwidth">
  <h2 class="title"><%= t ".list" %></h2>
  <section class="panel">
    <div class="nav search-row text-center">
      <%= form_tag categories_path, method: :get, id: :search_category do %>
        <%= text_field_tag :search, params[:search], placeholder: t(".search") %>
        <%= submit_tag t(".search_user"), name: nil %>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>
              <tr class="bold table-cate">
                <th><%= t ".name" %></th>
                <th><%= t "parent_category" %></th>
                <th><em class="fa fa-cog"></em></th>
              </tr>
            </thead>
            <tbody>
              <% if @categories.present? %>
                <div id="category"><%= render @categories %></div>
              <% else %>
                <% flash[:danger] = t(".not_found_categories") %>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </section>
</div>
