<tr>
  <td><%= category.name %></td>
  <td>
    <%= category.parent.name if category.parent.present? %>
  </td>
  <td align="center">
    <%= link_to t(".details"), edit_category_path(category.id),
      class: "btn btn-warning btn-rounded btn-sm my-0" %>
    <%= link_to t("categories.show.new"), new_category_path(parent_id: category.id),
      class: "btn btn-success btn-rounded btn-sm my-0" %>
    <%= link_to t(".delete"), category_path(category.id),
      method: :delete, data: {confirm: t("categories.index.sure"),
        id: category.id}, class: "btn btn-danger btn-rounded btn-sm
          my-0 destroy" %>
  </td>
</tr>
