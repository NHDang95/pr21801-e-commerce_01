<div class="container_fullwidth">
  <div class="container">
    <h2 class="title"><%= t "devise.registrations.edit.signup" %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group mt-15">
        <%= f.label :name, t("devise.sessions.new.name") %>
        <%= f.text_field :name, class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label :email, t("shared.sign_up.email") %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label :phone, t("shared.sign_up.phone") %>
        <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label :address, t("shared.sign_up.address") %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label :password, t("shared.sign_up.password") %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>
          <%= t "devise.registrations.edit.characters_minimum" %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, t("shared.sign_up.password_confirm") %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.submit t("devise.registrations.edit.signup"), class: "btn btn-success btn-block"  %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
