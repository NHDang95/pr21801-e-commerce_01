<div class="row">
  <div class="col-md-12 col-sm-12">
    <%= form_for [@product, @product.comments.build], remote: true do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.hidden_field :parent_id, value: parent_id %>
      <%= f.hidden_field :product_id %>
      <% if user_signed_in? %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.text_area :content,
          placeholder: t(".write_something"),
          class: "form-row input textareafild" %>
        <%= f.submit button_text, class: "button" %>
      <% else %>
        <%= f.text_area :content,
          placeholder: t(".not_sign_in"), disabled: "disabled",
          class: "form-row input textareafild" %>
        <%= f.submit button_text, disabled: "disabled", class: "button" %>
      <% end %>
    <% end %>
  </div>
</div>
